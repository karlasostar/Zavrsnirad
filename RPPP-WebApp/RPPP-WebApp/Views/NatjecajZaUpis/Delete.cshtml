@model RPPP_WebApp.Models.NatjecajZaUpi

<h2>Brisanje natječaja za upis</h2>

<h4>Jeste li sigurni da želite obrisati ovu stavku?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Naziv</dt>
        <dd class="col-sm-10">@Model.IdStatusNavigation?.StatusNatjecanja</dd> <!-- Correct the property name here -->
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdNatjecanja" /> <!-- Use the correct property for Id -->
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </form>
</div>
