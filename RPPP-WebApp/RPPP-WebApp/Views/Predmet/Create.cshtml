@model Predmet

@{
	ViewBag.Title = "Novi predmet";
}

<h2>Stvori novi predmet</h2>

<form asp-action="Create" method="post">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="Naziv" class="control-label"></label>
		<input asp-for="Naziv" class="form-control" />
		<span asp-validation-for="Naziv" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="PlanProgram" class="control-label"></label>
		<input asp-for="PlanProgram" class="form-control" />
		<span asp-validation-for="PlanProgram" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Program" class="control-label"></label>
		<input asp-for="Program" class="form-control" />
		<span asp-validation-for="Program" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="JelIzboran" class="control-label"></label>
		<select asp-for="JelIzboran" class="form-control">
			<option value=1>Da</option>
			<option value=0>Ne</option>
		</select>
		<span asp-validation-for="JelIzboran" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Ects" class="control-label"></label>
		<input asp-for="Ects" class="form-control" type="number" min="0.5" max="30" step="0.5" />
		<span asp-validation-for="Ects" class="text-danger"></span>
	</div>
	<div class="text-center">
		<button class="btn btn-primary" type="submit">Dodaj</button>
		<a asp-action="Index" class="btn btn-secondary">Odustani</a>
	</div>
</form>

@section scripts {
	<partial name="IncludeValidation" />
}